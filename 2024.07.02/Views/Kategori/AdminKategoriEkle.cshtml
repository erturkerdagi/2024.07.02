@model LayerEntity.Entities.Kategori

@{
    ViewData["Title"] = "AdminKategoriEkle";
    Layout = "~/Views/Shared/AdminSablon.cshtml";
}

<h1>Kategori Ekleme</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="AdminKategoriEkle">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="KategoriAdi" class="control-label"></label>
                <input asp-for="KategoriAdi" class="form-control" />
                <span asp-validation-for="KategoriAdi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KategoriAciklamasi" class="control-label"></label>
                <input asp-for="KategoriAciklamasi" class="form-control" />
                <span asp-validation-for="KategoriAciklamasi" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="KategoriDurum" /> @Html.DisplayNameFor(model => model.KategoriDurum)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Ekle" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="AdminKategoriListeleme">Listeye Dön</a>
</div>

